# Docker Development Environment Configuration
# Copy this file to .env and customize the ports for your local setup

# Port Configuration
# Modify these ports if you have conflicts with other Docker instances
NGINX_PORT=8080
PHPMYADMIN_PORT=8081
REDIS_COMMANDER_PORT=8082
MYSQL_PORT=3306
REDIS_PORT=6379

# Database Configuration
MYSQL_ROOT_PASSWORD=root_password
MYSQL_DATABASE=app
MYSQL_USER=app
MYSQL_PASSWORD=!ChangeMe!

# Container Names (customize if you have naming conflicts)
CONTAINER_PREFIX=dating_platform

# Network Name
NETWORK_NAME=dating_platform

# Volume Names (customize if you have volume conflicts)
MYSQL_VOLUME=dating_platform_mysql_data
REDIS_VOLUME=dating_platform_redis_data